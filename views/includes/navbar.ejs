<nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow-sm custom-navbar">
  <div class="container-fluid">
    <!-- Logo + Brand -->
    <a class="navbar-brand d-flex align-items-center fw-bold fs-4" href="/">
      <img src="/images/logo.png" alt="Dream Places Logo" class="me-2" style="height:50px;">
      DreamPlaces
    </a>

    <!-- Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
            data-bs-target="#navbarNav" aria-controls="navbarNav" 
            aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse " id="navbarNav">
      <!-- Center links -->
      <ul class="navbar-nav mx-auto">
        <!-- <li class="nav-item">
          <a class="nav-link px-3" href="/">Home</a>
        </li> -->
        <li class="nav-item">
          <a class="nav-link px-3" href="/listings">All Listings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link px-3" href="/listings/new">Add New Listing</a>
        </li>
      </ul>
      <div class=" ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 rounded-pill fw-semibold px-4 me-1" type="search" placeholder="Search  destinations" aria-label="Search"/>
          <button class="btn search-btn btn-light rounded-pill fw-semibold px-4 me-1 " type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>

      <!-- Right side dropdown -->
      <div class="dropdown">
        <button class="btn btn-light rounded-pill fw-semibold px-4 dropdown-toggle" 
                type="button" id="accountMenu" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-person-circle me-1"></i> Account
        </button>
        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="accountMenu">
          <% if(!currUser) { %>
            <li><a class="dropdown-item" href="/signup"><i class="bi bi-person-plus me-2"></i> Sign Up</a></li>
            <li><a class="dropdown-item" href="/login"><i class="bi bi-box-arrow-in-right me-2"></i> Login</a></li>
            <% } %>
