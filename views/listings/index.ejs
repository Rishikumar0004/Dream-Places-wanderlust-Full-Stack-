<% layout("/layouts/boilerplate.ejs") %>


<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: flex-start;
        gap: 1rem;
        margin-top: 3rem;
        padding: 10px;
        background-color: #0D1F1E !important;
    }

    
    .filter {
        text-align: center;
        min-width: 70px;
        cursor: pointer;
        opacity: 0.7;
        color: aliceblue;
        transition: all 0.3s ease;
        
    }

    .filter i {
        font-size: 1.5rem;
        display: block;
        margin-bottom: 5px;
        margin-top: 5px;
    }

    .filter:hover {
        opacity: 1;
        transform: translateY(-5px);
    }

    .filter p:hover {
        padding: 5px;
        border-radius: 10%;
        box-shadow: 0 0px 50px rgba(0, 253, 8, 1) !important;
    }

    /* Responsive design */
    @media (max-width: 992px) {
        #filters {
            justify-content: center;
        }
        .filter {
            margin-right: 1rem;
        }
    }

    @media (max-width: 576px) {
        #filters {
            gap: 1rem;
        }
        .filter {
            min-width: 60px;
            margin-right: 0.5rem;
        }
        .filter i {
            font-size: 1.2rem;
        }
        .filter p {
            font-size: 0.8rem;
        }
    }

    .tax-info{
        display: none;
    }

 

    .tax-toggle{
        border: 1px solid bisque;
        padding: 10px;
        border-radius: 10px;
        margin-left: 5rem;
        box-shadow: 0 0px 50px rgba(0, 253, 8, 0) !important;
    }
    .tax-toggle:hover {
        box-shadow: 0 0px 50px rgba(0, 253, 8, 1) !important;
    }


</style>


<div class="" id="filters">
    <div class="filter">
        <div class=""><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>

    <div class="filter">
        <div class=""><i class="fa-solid fa-bed"></i></div>
        <p>Room</p>
    </div>

    <div class="filter">
        <div class=""><i class="fa-solid fa-city"></i></div>
        <p>Iconic City</p>
    </div>
    
    <div class="filter">
        <div class=""><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
    </div>
    <div class="filter">
        <div class=""><i class="fa-brands fa-fort-awesome-alt"></i></div>
        <p>Castles</p>
    </div>
    <div class="filter">
        <div class=""><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
    </div>
    <div class="filter">
        <div class=""><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
    </div>
    <div class="filter">
        <div class=""><i class="fa-solid fa-cow"></i></i></div>
        <p>Farms</p>
    </div>
    <div class="filter">
        <div class=""><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>
    <div class="filter">
        <div class=""><i class="fa-solid fa-angles-right"></i></div>
        <p>More</p>
    </div>

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
    </div>
</div>

    <!-- <h3 class="mt-4">All listings</h3><br> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4 "> 
        <%for(let listing of allListings) {%>
            <a href="/listings/<%=listing.id%>" style="text-decoration: none; color: #222222;">
                <div class="card col" >
                    <img src=" <%= listing.image.url %>" 
                    class="card-img-top" 
                    alt="listing_image" 
                    style="height: 20rem;" />
                    <div class="card-img-overlay" > 
                        <p >&#9825;</p>
                        <p class="overlay-text" >See in Detail</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text single-line-limit"><b>Title-</b><%=listing.title%></p>
                        <p class="card-text"><b>Price- &#8377; <%=listing.price.toLocaleString("en-IN")%> /Night</b><i class="tax-info">&nbsp;&nbsp;+18% GST</i></p>
                        <!-- <p class="card-text"><%=listing.description%></p><br> -->
                        
                    </div>
                </div>
            </a>
        <%}%>
        </div>


<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (info of taxInfo) {
            if(info.style.display != "inline") {
                info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        }
    });
</script>